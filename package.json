{
  "name": "microts",
  "version": "1.0.0",
  "description": "Microservice built with Bun and Express",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "pg": "^8.11.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pino": "^7.0.5",
    "pino-pretty": "^13.1.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/pg": "^8.6.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
